<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sweet="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <Toolbar android:id="@+id/toolbar" android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="?attr/actionBarSize" sweet:theme="@style/Theme.AppCompat">
        <ImageView android:id="@+id/back_btn" android:padding="5dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_arrow_back"/>
        <TextView android:textSize="20sp" android:textColor="@color/white" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Privacy Policy" android:paddingStart="15dp"/>
    </Toolbar>
    <WebView android:id="@+id/webview" android:background="@android:color/transparent" android:padding="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:layout_below="@+id/toolbar"/>
</RelativeLayout>
