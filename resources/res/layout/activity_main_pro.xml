<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:sweet="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:background="@drawable/top_background_semi_circle" android:layout_width="match_parent" android:layout_height="200dp"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/bannerContainer">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:layout_gravity="center" android:id="@+id/app_icon" android:layout_width="90dp" android:layout_height="90dp" android:layout_marginTop="30dp" android:layout_marginBottom="10dp" android:src="@drawable/ic_user_profile" android:layout_centerHorizontal="true"/>
            <TextView android:textSize="28dp" android:textColor="@color/white" android:id="@+id/heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hi User!" android:layout_below="@+id/app_icon" android:layout_centerHorizontal="true" android:fontFamily="@font/font_bold"/>
            <androidx.cardview.widget.CardView android:id="@+id/wallet_upper_card" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:layout_weight="1" android:layout_below="@+id/heading" android:layout_marginStart="50dp" android:layout_marginEnd="50dp" sweet:cardBackgroundColor="#f0f4f8" sweet:cardCornerRadius="20dp" sweet:cardElevation="4dp">
                <LinearLayout android:orientation="horizontal" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="70dp" android:layout_weight="1" android:layout_marginEnd="10dp">
                        <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/ic_wallet_2" android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="70dp" android:layout_weight="1" android:layout_marginStart="10dp">
                        <TextView android:textSize="30dp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2000" android:fontFamily="@font/font_bold"/>
                        <TextView android:textSize="20dp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Coin"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout android:orientation="vertical" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="50dp" android:layout_marginBottom="20dp" android:layout_below="@+id/wallet_upper_card">
                <LinearLayout android:orientation="horizontal" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="0dp" android:weightSum="3">
                    <androidx.cardview.widget.CardView android:id="@+id/watch_video_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_weight="1" sweet:cardBackgroundColor="#f0f4f8" sweet:cardCornerRadius="10dp" sweet:cardElevation="4dp">
                        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <ImageView android:padding="5dp" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="5dp" android:src="@drawable/ic_video"/>
                            <TextView android:textSize="13dp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Watch Video" android:fontFamily="@font/font_bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView android:id="@+id/spin_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_weight="1" sweet:cardBackgroundColor="#f0f4f8" sweet:cardCornerRadius="10dp" sweet:cardElevation="4dp">
                        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <ImageView android:padding="5dp" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="5dp" android:src="@drawable/ic_roulette"/>
                            <TextView android:textSize="13dp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Spin Win" android:fontFamily="@font/font_bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView android:id="@+id/news_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_weight="1" sweet:cardBackgroundColor="#f0f4f8" sweet:cardCornerRadius="10dp" sweet:cardElevation="4dp">
                        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <ImageView android:padding="5dp" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="5dp" android:src="@drawable/ic_news"/>
                            <TextView android:textSize="13dp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="News" android:fontFamily="@font/font_bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="0dp" android:weightSum="3">
                    <androidx.cardview.widget.CardView android:id="@+id/spacial_offer_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_weight="1" sweet:cardBackgroundColor="#f0f4f8" sweet:cardCornerRadius="10dp" sweet:cardElevation="4dp">
                        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <ImageView android:padding="5dp" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="5dp" android:src="@drawable/ic_spacial_offer"/>
                            <TextView android:textSize="13dp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Spacial Offer" android:fontFamily="@font/font_bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView android:id="@+id/wallet_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_weight="1" sweet:cardBackgroundColor="#f0f4f8" sweet:cardCornerRadius="10dp" sweet:cardElevation="4dp">
                        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <ImageView android:padding="5dp" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="5dp" android:src="@drawable/ic_wallet"/>
                            <TextView android:textSize="13dp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Wallet" android:fontFamily="@font/font_bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView android:id="@+id/redeem_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_weight="1" sweet:cardBackgroundColor="#f0f4f8" sweet:cardCornerRadius="10dp" sweet:cardElevation="4dp">
                        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <ImageView android:padding="5dp" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="5dp" android:src="@drawable/ic_redeem"/>
                            <TextView android:textSize="13dp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Redeem" android:fontFamily="@font/font_bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="0dp" android:weightSum="3">
                    <androidx.cardview.widget.CardView android:id="@+id/refer_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_weight="1" sweet:cardBackgroundColor="#f0f4f8" sweet:cardCornerRadius="10dp" sweet:cardElevation="4dp">
                        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <ImageView android:padding="5dp" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="5dp" android:src="@drawable/ic_gift_voucher"/>
                            <TextView android:textSize="13dp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Refer &amp; Earn" android:fontFamily="@font/font_bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView android:id="@+id/telegram_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_weight="1" sweet:cardBackgroundColor="#f0f4f8" sweet:cardCornerRadius="10dp" sweet:cardElevation="4dp">
                        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <ImageView android:padding="5dp" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="5dp" android:src="@drawable/ic_telegram"/>
                            <TextView android:textSize="13dp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Join Us" android:fontFamily="@font/font_bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView android:id="@+id/rate_us_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_weight="1" sweet:cardBackgroundColor="#f0f4f8" sweet:cardCornerRadius="10dp" sweet:cardElevation="4dp">
                        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <ImageView android:padding="5dp" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="5dp" android:src="@drawable/ic_star"/>
                            <TextView android:textSize="13dp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Rate Us" android:fontFamily="@font/font_bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="0dp" android:weightSum="3">
                    <androidx.cardview.widget.CardView android:id="@+id/tnc_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_weight="1" sweet:cardBackgroundColor="#f0f4f8" sweet:cardCornerRadius="10dp" sweet:cardElevation="4dp">
                        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <ImageView android:padding="5dp" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="5dp" android:src="@drawable/ic_tnc"/>
                            <TextView android:textSize="13dp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="TnC" android:fontFamily="@font/font_bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView android:id="@+id/pp_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_weight="1" sweet:cardBackgroundColor="#f0f4f8" sweet:cardCornerRadius="10dp" sweet:cardElevation="4dp">
                        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <ImageView android:padding="5dp" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="5dp" android:src="@drawable/ic_privacy"/>
                            <TextView android:textSize="13dp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Privacy" android:fontFamily="@font/font_bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView android:id="@+id/exit_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_weight="1" sweet:cardBackgroundColor="#f0f4f8" sweet:cardCornerRadius="10dp" sweet:cardElevation="4dp">
                        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <ImageView android:padding="5dp" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="5dp" android:src="@drawable/ic_exit"/>
                            <TextView android:textSize="13dp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Logout" android:fontFamily="@font/font_bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <FrameLayout android:id="@+id/bannerContainer" android:background="@color/transprant" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
</RelativeLayout>
